{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2024",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
